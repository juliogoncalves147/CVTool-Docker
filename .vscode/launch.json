{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Uvicorn FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",  // Use "module" instead of "program"
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/CVTool-Back-End",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/CVTool-Back-End"
            }
        }
    ]
}
